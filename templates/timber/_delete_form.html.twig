<form method="post" action="{{ path('timber_delete', {'id': timber.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ timber.id) }}">
    <button class="btn">Delete</button>
</form>
